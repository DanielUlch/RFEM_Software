<UserControl x:Class="RFEM_Software.Forms.SettingsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RFEM_Software.Forms"
             xmlns:properties="clr-namespace:RFEM_Software.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500"
             DataContext="{x:Static properties:Settings.Default}">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Ghostview file path"/>
            <TextBox Name="txtGhostViewPath" Text="{Binding Path=GhostViewPath, Mode=TwoWay }" Width="300" />
        </StackPanel>
    </StackPanel>
</UserControl>
